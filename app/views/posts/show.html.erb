<% if creator_or_admin?(@post) %>
  <p class="pull-right">
    [<%= link_to 'edit this post', edit_post_path(@post) %>]
  </p>
<% end %>

<p>
  <%= render @post.categories %>
</p>

<%= render 'shared/content_title', title: @post.title %>

<p>
  <%= @post.description %>
  <hr />
</p>

<% if logged_in? %>
  <%= render '/comments/form' %>
<% end %>

<h5>Comments:</h5>
<%= render @post.reload.comments %>
